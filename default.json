{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":semanticCommits", ":semanticCommitTypeAll(chore)", ":semanticCommitScopeDisabled", ":disableRateLimiting"],
  "onboardingConfig": {
    "extends": ["config:base"]
  },
  "autodiscover": true,
  "autodiscoverFilter": "4s1-org/playground-library",
  "enabledManagers": ["npm", "dockerfile", "gomod"],
  "platformAutomerge": true,
  "assignees": ["steffen-4s1"],
  "labels": ["renovate"],
  "gitAuthor": "Bot <bot@4s1.de>",
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^@4s1/"],
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "automerge": true
    },
    {
      "matchPackagePatterns": [
        "@commitlint/cli",
        "@commitlint/config-conventional",
        "@types/node",
        "eslint",
        "husky",
        "prettier",
        "standard-version",
        "ts-node"
      ],
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["typescript"],
      "matchUpdateTypes": ["patch", "pin"],
      "automerge": true,
      "allowedVersions": "<=4.6"
    }
  ]
}
