{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":semanticCommits", ":semanticCommitTypeAll(bot)", ":semanticCommitScopeDisabled"],
  "onboardingConfig": {
    "extends": ["config:base"]
  },

  "endpoint": "https://gitlab.com/api/v4/",
  "autodiscover": true,
  "platform": "gitlab",
  "autodiscoverFilter": "4s1/playground/*",
  "labels": ["renovate", "foobar"],
  "gitAuthor": "Bot <bot@4s1.de>",

  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "gitLabAutomerge": true,
  "assignees": ["steffen-4s1"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin"],
      "automerge": true
    }
  ]
}
