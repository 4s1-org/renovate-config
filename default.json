{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":semanticCommits", ":semanticCommitTypeAll(chore)", ":semanticCommitScopeDisabled"],
  "onboardingConfig": {
    "extends": ["config:base"]
  },
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "enableManagers": ["npm", "docker"],
  "gitLabAutomerge": true,
  "assignees": ["steffen-4s1"],
  "labels": ["renovate"],
  "gitAuthor": "Bot <bot@4s1.de>",
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin"],
      "automerge": true
    }
  ]
}
